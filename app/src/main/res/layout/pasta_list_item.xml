<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_margin="8dp"
    android:background="#DAB4B4">
    <ImageView
        android:id="@+id/meal_thumb"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:contentDescription="Meal Image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/meal_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Mac and Cheese"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textColor="@color/black"
        android:fontFamily="cursive"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/meal_thumb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/meal_id"
        app:layout_goneMarginStart="0dp"/>
    <TextView
        android:id="@+id/meal_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="ID: 52839"
        android:visibility="gone"
        android:textSize="16sp"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/meal_thumb"
        app:layout_constraintTop_toBottomOf="@id/meal_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>